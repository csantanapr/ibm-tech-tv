    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Vision",
            "remoteRoot": "/user-app",
            "localRoot": "${workspaceFolder}/1-containers"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Cloud-Storage",
            "remoteRoot": "/user-app",
            "localRoot": "${workspaceFolder}/3-microservices/a-cloud-storage",
            "port": 9229
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Watson-Vision",
            "remoteRoot": "/user-app",
            "localRoot": "${workspaceFolder}/3-microservices/b-watson-vision",
            "port": 9230
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Legacy App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/0-servers",
            "program": "${workspaceFolder}/0-servers/server.js"
        }
    ]
}